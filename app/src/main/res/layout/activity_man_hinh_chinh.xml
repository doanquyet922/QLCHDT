<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhChinhActivity"
    android:gravity="center"
   >
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/dienthoai"
        android:id="@+id/MHC_btnDSSP"/>
    <TextView
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:id="@+id/tvSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm"
        android:layout_below="@+id/MHC_btnDSSP"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvSP"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/hdb"
        android:id="@+id/MHC_QLHD"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:id="@+id/tvhd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hóa đơn"
        android:layout_below="@+id/MHC_QLHD"/>
    />


</RelativeLayout>